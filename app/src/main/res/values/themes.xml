<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BasicKotlin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme_BackgroundButtonBase">
        <item name="android:textSize">34sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">#</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/bg_circle</item>
    </style>

    <style name="Theme_BackgroundButton" parent="Theme_BackgroundButtonBase">
        <item name="android:background">@drawable/bg_pa_button</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Theme_Backgroundfrg">
        <item name="background">@android:color/white</item>
    </style>

    <style name="Theme_colorText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Theme_BackgroundButtonJuan">
        <item name="android:background">@drawable/bg_btn_juan</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Theme_BackgroundButtonManuel">
        <item name="android:background">@drawable/bg_mh_button</item>
        <item name="android:textColor">@color/mh_primary</item>
        <item name="android:textSize">42sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Theme_BackgroundButtonContentManuel">
        <item name="android:background">@drawable/bg_mh_button</item>
        <item name="android:textColor">@color/mh_primary</item>
        <item name="android:textSize">26sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme_BackgroundButtonOperatorManuel" parent="Theme_BackgroundButtonManuel">
        <item name="android:background">@drawable/bg_mh_button_operator</item>
        <item name="android:textColor">@color/mh_secondary</item>
    </style>

    <style name="Theme_BackgroundButtonPablo">
        <item name="android:background">@drawable/bg_mh_button</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="Theme_BackgroundantonioChatSent">
        <item name="android:background">@drawable/bg_antonio_chat_sent</item>
    </style>

    <style name="Theme_BackgroundantonioChatRecived">
        <item name="android:background">@drawable/bg_antonio_chat_recived</item>
    </style>
</resources>