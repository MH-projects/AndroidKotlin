<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Antonio.ActAntonioMain">

  <EditText
      android:id="@+id/etInsertNum"
      android:layout_width="match_parent"
      android:layout_height="90dp"
      android:inputType="none"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.024" />

  <TextView
      android:id="@+id/tvResult"
      android:layout_width="200dp"
      android:layout_height="50dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/etInsertNum" />

  <Button
      android:id="@+id/btnSuma"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:layout_margin="5dp"
      android:layout_marginStart="4dp"
      android:text="@string/suma"
      android:textSize="40sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvResult"
      app:layout_constraintVertical_bias="0.086" />

  <Button
      android:id="@+id/btnResta"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:layout_margin="5dp"
      android:layout_marginStart="4dp"
      android:text="@string/resta"
      android:textSize="40sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@+id/btnSuma"
      app:layout_constraintTop_toBottomOf="@+id/tvResult"
      app:layout_constraintVertical_bias="0.088" />

  <Button
      android:id="@+id/btnMult"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:layout_margin="5dp"
      android:layout_marginStart="4dp"
      android:text="@string/multiplicacion"
      android:textSize="35sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@+id/btnResta"
      app:layout_constraintTop_toBottomOf="@+id/tvResult"
      app:layout_constraintVertical_bias="0.086" />

  <Button
      android:id="@+id/btnDiv"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:layout_margin="5dp"
      android:text="@string/divicion"
      android:textSize="40sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toEndOf="@+id/btnMult"
      app:layout_constraintTop_toBottomOf="@+id/tvResult"
      app:layout_constraintVertical_bias="0.087" />

  <Button
      android:id="@+id/btnSiete"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:layout_margin="5dp"
      android:text="@string/siete"
      android:textSize="40sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btnSuma"
      app:layout_constraintVertical_bias="0.0" />

  <Button
      android:id="@+id/btnocho"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:layout_margin="5dp"
      android:text="@string/ocho"
      android:textSize="40sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@+id/btnSiete"
      app:layout_constraintTop_toBottomOf="@+id/btnResta"
      app:layout_constraintVertical_bias="0.0" />

  <Button
      android:id="@+id/btnNueve"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:layout_margin="5dp"
      android:text="@string/nueve"
      android:textSize="40sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@+id/btnocho"
      app:layout_constraintTop_toBottomOf="@+id/btnMult"
      app:layout_constraintVertical_bias="0.0" />

  <ImageButton
      android:id="@+id/btnDelete"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:textColor="@color/black"
      android:layout_margin="5dp"
      android:src="@mipmap/ic_arrow_delete"

      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toEndOf="@+id/btnNueve"
      app:layout_constraintTop_toBottomOf="@+id/btnDiv"
      app:layout_constraintVertical_bias="0.0" />

  <Button
      android:id="@+id/btnCuatro"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:layout_margin="5dp"
      android:text="@string/cuatro"
      android:textSize="40sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btnSiete"
      app:layout_constraintVertical_bias="0.0" />

  <Button
      android:id="@+id/btnCinco"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:layout_margin="5dp"
      android:text="@string/cinco"
      android:textSize="40sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@+id/btnCuatro"
      app:layout_constraintTop_toBottomOf="@+id/btnocho"
      app:layout_constraintVertical_bias="0.0" />

  <Button
      android:id="@+id/btnSeis"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:layout_margin="5dp"
      android:text="@string/seis"
      android:textSize="40sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@+id/btnCinco"
      app:layout_constraintTop_toBottomOf="@+id/btnNueve"
      app:layout_constraintVertical_bias="0.0" />

  <Button
      android:id="@+id/btnC"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:layout_margin="5dp"
      android:text="@string/C"
      android:textSize="40sp"
      android:backgroundTint="@color/orange"
      android:textColor="@color/black"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@+id/btnSeis"
      app:layout_constraintTop_toBottomOf="@+id/btnDelete"
      app:layout_constraintVertical_bias="0.0" />

  <Button
      android:id="@+id/btnUno"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:layout_margin="5dp"
      android:text="@string/uno"
      android:textSize="40sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btnCuatro"
      app:layout_constraintVertical_bias="0.0" />

  <Button
      android:id="@+id/btnDos"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:layout_margin="5dp"
      android:text="@string/dos"
      android:textSize="40sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@+id/btnUno"
      app:layout_constraintTop_toBottomOf="@+id/btnCinco"
      app:layout_constraintVertical_bias="0.0" />

  <Button
      android:id="@+id/btnTres"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:layout_margin="5dp"
      android:text="@string/tres"
      android:textSize="40sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@+id/btnDos"
      app:layout_constraintTop_toBottomOf="@+id/btnSeis"
      app:layout_constraintVertical_bias="0.0" />

  <Button
      android:id="@+id/btnCero"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:layout_margin="5dp"
      android:text="@string/cero"
      android:textSize="40sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@+id/btnTres"
      app:layout_constraintTop_toBottomOf="@+id/btnC"
      app:layout_constraintVertical_bias="0.0" />

  <Button
      android:id="@+id/btnIgual"
      android:layout_width="match_parent"
      android:layout_height="70dp"
      android:layout_marginBottom="16dp"
      android:text="@string/igual"
      android:textSize="40sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>