<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#4E4E4E"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".josue.view.fragment.FrgJosueContent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFrgJosueWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/teal_700"
        android:drawableLeft="@android:drawable/ic_menu_myplaces"
        android:padding="20sp"
        android:text="@string/jc_firstproyect"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFrgJosueCalculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:background="@color/black"
        android:drawableLeft="@android:drawable/ic_dialog_dialer"
        android:padding="20sp"
        android:layout_marginTop="16dp"
        android:text="@string/jc_secondproyect"
        android:textColor="@color/orange"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/btnFrgJosueWelcome"
        tools:layout_editor_absoluteX="16dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFrgJosueRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:background="@color/purple_700"
        android:drawableLeft="@android:drawable/ic_dialog_dialer"
        android:padding="20sp"
        android:layout_marginTop="16dp"
        android:text="@string/jc_thirdproyect"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/btnFrgJosueCalculator"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>